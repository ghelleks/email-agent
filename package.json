    "setup:account": "node scripts/setup-account.js",
    "switch:status": "node scripts/switch-account.js status",
    "switch:create-project-files": "node scripts/switch-account.js create-project-files",
    "auth:help": "echo '\nüîê Authentication Help:\n   clasp --user personal login    - Log into personal account\n   clasp --user work login        - Log into Work account\n   npm run switch:status          - Check all authentication status\n'",

