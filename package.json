    "url:all": "echo '\nüì± Getting Web App URLs for all accounts...\n' && npm run url:personal && npm run url:work",

    "_comment_multi_account_operations": "Multi-Account Operations",
    "status:all": "node scripts/multi-account.js status-all",

    "_comment_validation": "Configuration Validation",
