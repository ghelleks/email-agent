{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Email Agent Accounts Configuration",
  "description": "Configuration schema for managing multiple Google Apps Script accounts",
  "type": "object",
  "required": ["defaultAccount", "accounts"],
  "properties": {
    "defaultAccount": {
      "type": "string",
      "description": "The default account to use when no specific account is specified"
    },
    "accounts": {
      "type": "object",
      "description": "Collection of configured accounts",
      "patternProperties": {
        "^[a-zA-Z0-9_-]+$": {
          "type": "object",
          "required": ["scriptId", "description"],
          "properties": {
            "scriptId": {
              "type": "string",
              "pattern": "^[a-zA-Z0-9_-]{30,}$",
              "description": "Google Apps Script project ID"
            },
            "description": {
              "type": "string",
              "description": "Human-readable description of this account"
            }
          }
        }
      }
    }
  }
}